<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="56dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:weightSum="5.0">

        <ImageView
            android:id="@+id/accountBtn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/sel"
            android:clickable="true"
            android:padding="12dp"
            android:src="@drawable/accout"/>


        <ImageView
            android:id="@+id/settingsBtn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/sel"
            android:clickable="true"
            android:padding="12dp"
            android:src="@drawable/settings"/>


        <ImageView
            android:id="@+id/MagsBtn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/sel"
            android:clickable="true"
            android:padding="12dp"
            android:src="@drawable/mag"/>


        <ImageView
            android:id="@+id/sourcesBtn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/sel"
            android:clickable="true"
            android:padding="12dp"
            android:src="@drawable/rss"/>


        <ImageView
            android:id="@+id/allnewsBtn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/sel"
            android:clickable="true"
            android:padding="12dp"
            android:src="@drawable/all_news"/>

    </LinearLayout>

</LinearLayout>